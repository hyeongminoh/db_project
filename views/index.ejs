							<li class="list-inline-item">
								<a href=""><i class="fa fa-cutlery"></i> 베트남 </a>
							</li>
							<li class="list-inline-item">
								<a href=""><i class="fa fa-coffee"></i> Cafe</a>
							</li>
						</ul>
					</div>
					
				</div>
				<!-- Advance Search -->
				<div class="advance-search">
					<form action="/do_search" method = "post">
						<div class="row">
							<!-- Store Search -->
							<div class="col-lg-6 col-md-12">
								<div class="block d-flex text-center">
									<input type="search" class="form-control mb-2 mr-sm-2 mb-sm-0 text-center" id="search" name = "searchword" >
									<!-- Search Button -->
									<button type="submit"  class="btn btn-main">검색</button>
								</div>

							</div>

						</div>
					</form>

				</div>
				
			</div>
		</div>
	</div>
	<!-- Container End -->
</section>


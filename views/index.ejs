====================================-->


<!--===========================================
=            Popular deals section            =
============================================-->

<section class="popular-deals section bg-gray">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="section-title">
					<h2>오늘의 인기 식당</h2>
					<p></p>
				</div>
			</div>
		</div>
		<div class="row">
			<!-- offer 01 -->
			<% selected.forEach(function(item){ %>
			<div class="col-sm-12 col-lg-4">
				<!-- product card -->
<div class="product-item bg-light">
	<div class="card">
		<div class="thumb-content">
			<!-- <div class="price">$200</div> -->
			<a href="">
				<img class="card-img-top img-fluid" src="<%= item.image %>" alt="Card image cap">
			</a>
		</div>
		<div class="card-body">
		    <h4 class="card-title"><a href="/restaurant/<%= item.idrestaurant %>"><%= item.r_name %></a></h4>
		    <ul class="list-inline product-meta">
		    	<li class="list-inline-item">
		    		<a href="/Restaurant/<%= item.idrestaurant %>"><i class="fa fa-folder-open-o"></i><%= item.loc_name %></a>
		    	</li>
		    	<li class="list-inline-item">
		    		<a href="/Restaurant/<%= item.idrestaurant %>"><i class="fa fa-calendar"></i><%= item.time %></a>
		    	</li>
		    </ul>
		    <p class="card-text"><%= item.location %></p>
		    <div class="product-ratings">
		    	<ul class="list-inline">
		    		<li class="list-inline-item selected"><i class="fa fa-star"></i></li>
		    		<li class="list-inline-item selected"><i class="fa fa-star"></i></li>
		    		<li class="list-inline-item selected"><i class="fa fa-star"></i></li>
		    		<li class="list-inline-item selected"><i class="fa fa-star"></i></li>
		    		<li class="list-inline-item"><i class="fa fa-star"></i></li>
		    	</ul>
		    </div>
		</div>
	</div>
</div>



			</div>

	<% }) %>
	
			
		</div>
	</div>
</section>




<% include ./navigator.ejs %>

<!--================================
=            Page Title            =
=================================-->
<section class="page-title">
	<!-- Container Start -->
	<div class="container">
		<div class="row">
			<div class="col-md-12 text-center">
				<!-- Title text -->
				<h3>검색 결과: <%=info.name%></h3>
			</div>
		</div>
	</div>
	<!-- Container End -->
</section>
<!--==================================
=            Blog Section            =
===================================-->

<section class="blog single-blog section">
	<div class="container">
		<!-- <div class="row"> -->
			<div class="col-md-12">
				<article class="single-post">
					<img src="/images/blog/restaurant_default.jpg" alt="article-01">
					<p><b>위치</b> : <%=info.location%> <br>
						<%if (info.time==null){ %>
							<b>영업 시간</b> : -- <br>
						<% } else { %>
							<b>영업 시간</b> : <%=info.time%> <br>
						<% } %>
						<b>분류</b> : <%=info.menu_type%><br>
						<%if (info.reservaion==0){ %>
							<b>예약 가능 여부</b> : X <br>
						<% } else {  %>
							<b>예약 가능 여부</b> : O <br>
						<% } %>
						<b>연락처</b> : <%=info.phone%><br></p>
						<table class="table">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">menu</th>
									<th scope="col">가격</th>
								</tr>
							</thead>
							<tbody>
								<%if (menu.length!=1){ %>
									<%for (var i =0; i< menu.length; i++){ %>
									<tr>
										<th scope="row"> <%=i+1%></th>
										<td> <%=menu[i].menu_name%></td>
										<td><%=menu[i].price%></td>
									</tr>
									<% } %>
								<% } %>
							</tbody>
						</table>
				</article>
				<div class="block comment">
					<h4>Leave A Comment</h4>
					<form action="#">
						<!-- Message -->
						<div class="form-group mb-30">
						    <label for="message">Message</label>
						    <textarea class="form-control" id="message" rows="8"></textarea>
						</div>
						<div class="row">
							<div class="col-sm-12 col-md-6">
								<!-- Name -->
								<div class="form-group mb-30">
								    <label for="name">Name</label>
								    <input type="text" class="form-control" id="name">
								</div>
							</div>
							<div class="col-sm-12 col-md-6">
								<!-- Email -->
								<div class="form-group mb-30">
								    <label for="email">Email</label>
								    <input type="email" class="form-control" id="email">
								</div>
							</div>
						</div>
						<button class="btn btn-transparent">Leave Comment</button>
					</form>
				</div>
			</div>
			</div>
		<!-- </div> -->
	</div>
</section>


